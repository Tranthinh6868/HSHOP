@model IEnumerable<Product>

<div class="row">
    <div class="col-3">
        @foreach(Category item in ViewBag.Categories){
            <li><a href="/home/category/@item.CategoryId">@item.CategoryName</a></li>
        }
    </div>
    <div class="col-9">
        <div class ="row">
            @foreach(var item in Model){
                <div class="col-3">
                <div class = "products">
                    <h3 class = "h6"><a href="/home/details/@item.ProductId">@item.ProductId</a></h3>
                    <div>
                        <a href="/home/details/@item.ProductId">
                            <img class ="img-fluid" src="/images/products/@item.Image" alt = "@item.ProductName">
                        </a>
                    </div>
                    <p>Gi√°: <b>@item.Price</b></p>
                    <form action="/cart/add" method = "post">
                        <input type="hidden" name = "productId" value="@item.ProductId">
                        <div class="row">
                            <div class="col" >
                                <input class="form-control" name = "quantity" type = "number" value="1" min="1" max="10">
                            </div>
                            <div class="col">
                                <button class="btn btn-primary">Add To Cart</button>

                            </div>

                        </div>

                    </form>
                    </div>
                </div>
            }

        </div>

    </div>
</div>
   
