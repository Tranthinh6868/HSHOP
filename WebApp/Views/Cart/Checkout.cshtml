@model Invoice
<form name="frm"  method="post">
    <div>
        <label asp-for="Fullname">FullName</label>
        <div>
            <input type="text" asp-for="Fullname">
        </div>
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <div>
            <input type="email" asp-for="Email">
        </div>
    </div>
    <div>
        <label asp-for="Phone">Phone</label>
        <div>
            <input type="number" asp-for="Phone">
        </div>
    </div>
    <div>
        <label asp-for="Address">Address</label>
        <div>
            <input type="text" asp-for="Address">
        </div>
    </div>
    <div>
        <button>Checkout</button>
        @* <a href="/cart/vnpayment">Pay with VN Payment</a> *@
        <button type = "button" id="btnVnPayment">Pay with VN Payment</button>
    </div>
    
</form>

<Script>
    $(btnVnPayment).click(function(){
        $(frm).attr('action', '/cart/vnpayment');
        $(frm).submit();
    });
</Script>